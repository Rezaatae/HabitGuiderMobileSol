<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             x:Class="HabitGuiderMobileSol.Popups.CreateHabitLogPopup"
             Title="CreateHabitLogPopup" BackgroundColor="#80000000" CloseWhenBackgroundIsClicked="True">
    <VerticalStackLayout WidthRequest="300" HeightRequest="250" VerticalOptions="CenterAndExpand" BackgroundColor="Black">
        <Label 
            Text="Create log"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <VerticalStackLayout Grid.Row="0"
                               Grid.ColumnSpan="4"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                           Spacing="5">
            <Entry Margin="0"/>
            <CheckBox />
            <Button Margin="3"
                    Text="Submit"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    CornerRadius="0"
                    Padding="0, 0"
                    BackgroundColor="Grey"
                    Clicked="SubmitHabitLogBtnClicked"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</mopups:PopupPage>